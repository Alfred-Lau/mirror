{
  "compilerOptions": {
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    // implicitly has an 'any' type.
    // "noImplicitAny": true,
    // "noUnusedLocals": true,
    "alwaysStrict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "types": [
      "node",
      "lodash",
      "mocha"
    ],
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}